<p class="display-1">Create</p>

<div class="row">

    <div class="col-6">
        <div class="card">
            <div class="card-header">
                <h5>Create a new dog</h5>
            </div>
            <div class="card-body">
                <form asp-controller="HelloWorld" asp-action="CreateDog" method="post"> 
                    <div class="mb-3">
                        <label class="form-label">Dog Name</label>
                        <input type="text" class="form-control" asp-for="Name"/>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Dog Age</label>
                        <input type="number" class="form-control" asp-for="Age" />
                    </div>
                    <div class="mb-3">
                        <button type="submit" class="btn btn-primary">save</button>
                    </div>
                </form>
            </div>
            <div class="card-footer"></div>
        </div>

    </div>
</div>